{
  "name": "vscode-fish-text",
  "publisher": "mamoru",
  "displayName": "Рыбный Текст",
  "description": "Adds substitutional text in Russian",
  "galleryBanner": {
    "color": "#7647ae",
    "theme": "dark"
  },
  "author": {
    "name": "Alexander Bolotskov"
  },
  "repository": {
    "type": "url",
    "url": "https://github.com/AlexAtHome/vscode-fish-text"
  },
  "icon": "images/carpe.png",
  "version": "1.1.0",
  "license": "MIT",
  "engines": {
    "vscode": "^1.18.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fishtext.addParagraph",
        "title": "Рыбный Текст: Добавить абзац текста"
      }
    ],
    "configuration": [
      {
        "title": "Рыбный Текст: Конфигурация",
        "type": "object",
        "properties": {
          "fish-text.snippetLanguages": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "html",
              "javascriptreact",
              "typescriptreact",
              "handlebars",
              "plaintext",
              "php",
              "markdown",
              "jade"
            ],
            "description": "Указывает, в каких языках должен работать сниппет для текста (`рыба`)"
          },
          "fish-text.htmlSnippetLanguages": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "html",
              "javascriptreact",
              "typescriptreact",
              "php"
            ],
            "description": "Указывает, в каких языках должен работать сниппет для текста в HTML-теге (`рыбатег`)"
          },
          "fish-text.pugSnippetLanguages": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "default": [
              "jade"
            ],
            "description": "Указывает, в каких языках должен работать сниппет для текста в HTML-теге, как в Pug (`рыбатег`)"
          },
          "fish-text.isEnglishSnippetEnabled": {
            "type": "boolean",
            "default": true,
            "description": "Включает сниппеты `fish` и `fishtag`"
          },
          "fish-text.isEnglishTextEnabled": {
            "type": "boolean",
            "default": false,
            "description": "Generates the English text with snippets `fish` and `fishtag`."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "echo 'no tests yet! lets just pretend everything works fine ^_^' && exit 0"
  },
  "devDependencies": {
    "@types/vscode": "^1.18.0",
    "@typescript-eslint/eslint-plugin": "^5.40.0",
    "@typescript-eslint/parser": "^5.40.0",
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "prettier": "^2.2.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "speech-code": "^1.4.0"
  },
  "volta": {
    "node": "16.13.0",
    "npm": "8.1.2"
  }
}
